@model IEnumerable<BookStore.Book>

@{
    ViewData["Title"] = "Search Results";
}

<h2>Search Results</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Category.Name</td>
            </tr>
        }
    </tbody>
</table>
